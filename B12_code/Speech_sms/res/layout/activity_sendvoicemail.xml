    <EditText
        android:id="@+id/et_sub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewPhoneNo"
        android:layout_marginTop="34dp"
        android:layout_weight="0.5"
        android:background="@drawable/custom_rectangle"
        android:ems="10"
        android:phoneNumber="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="To          "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF7F50"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_body"
        android:layout_centerVertical="true"
        android:text="body                  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF7F50"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/buttonspeak"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/et_sub"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_weight="0.5"
        android:background="@drawable/mic" />

    <EditText
        android:id="@+id/et_body"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewSMS"
        android:layout_marginLeft="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/custom_rectangle"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5" />

    <ImageButton
        android:id="@+id/buttonSend"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_toRightOf="@+id/et_body"
        android:background="@drawable/mailsend"
        android:text="Send" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/buttonspeak"
        android:layout_marginBottom="21dp"
        android:layout_weight="0.5"
        android:background="@drawable/mic" />

</RelativeLayout>